{
  "parser": "@typescript-eslint/parser",
  "root": true,
  "parserOptions": {
    "project": "tsconfig.json",
    "ecmaVersion": 2023,
    "sourceType": "module"
  },
  "extends": [
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "es2022": true,
    "node": true
  },
  "rules": {
    "no-process-exit": 0,
    "@typescript-eslint/no-inferrable-types": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "linebreak-style": ["error", "windows"]
  }
}
